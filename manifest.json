{
  "manifest_version": 2,
  "name": "Google search faviconizer",
  "version": "0.2.0",
  "description": "Add site icon(favicon) in Google search results.",
  "author": "makitaaaaa",
  "applications": {
    "gecko": {
      "id": "gsf@makitaaaaa"
    }
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "background": {
    "scripts": [
      "common.js",
      "background.js"
    ]
  },
  "content_scripts": [{
    "matches": [
      "https://*/*"
    ],
    "include_globs": [
      "https://www.google.*/search*"
    ],
    "css": ["content.css"],
    "js": [
      "common.js",
      "content.js"
    ],
    "run_at": "document_start"
  }],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false,
    "browser_style": false
  },
  "permissions": [
    "storage"
  ]
}